                        android:layout_weight="1"
                        android:text="@string/ciw228h" />

                    <RadioButton
                        android:id="@+id/ciw228i"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/ciw228i" />

                    <RadioButton
                        android:id="@+id/ciw228j"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/ciw228j" />

                    <RadioButton
                        android:id="@+id/ciw22896"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:text="@string/other" />


                    <EditText
                        android:id="@+id/ciw22896x"
                        style="@style/textInput"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                        android:enabled='@{cih31396.checked ? true : false}'
                        android:hint="@string/other"
